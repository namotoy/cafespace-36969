<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@user.nickname}さんの情報"%>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">名前</th>
            <td class="table__col2"><%= @user.nickname %></td>
          </tr>
          <tr>
            <th class="table__col1">住所</th>
            <td class="table__col2"><%= @user.prefecture.name %><%= @user.city %></td>
          </tr>
          
        </tbody>
      </table>
      <h2 class="page-heading">
        <%= "#{@user.nickname}さんの投稿"%>
      </h2>
      <div class="user__card">

         <%= render partial: 'cafetypes/cafetype', collection: @user.cafetypes %>
      </div>
    </div>
  </div>
</div>